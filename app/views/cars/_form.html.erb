<%= form_for @car, :html => { :class => "form-horizontal car" } do |f| %>

  <% if @car.errors.any? %>
    <div id="error_expl" class="panel panel-danger">
      <div class="panel-heading">
        <h3 class="panel-title"><%= pluralize(@car.errors.count, "error") %> prohibited this car from being saved:</h3>
      </div>
      <div class="panel-body">
        <ul>
        <% @car.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
        </ul>
      </div>
    </div>
  <% end %>

  <div class="form-group">
    <%= f.label :user_id, :class => 'control-label col-lg-2' %>
    <div class="col-lg-10">
      <%= f.text_field :user_id, :class => 'form-control' %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :plate, :class => 'control-label col-lg-2' %>
    <div class="col-lg-10">
      <%= f.text_field :plate, :class => 'form-control' %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :registration_date, :class => 'control-label col-lg-2' %>
    <div class="col-lg-10">
      <%= f.text_field :registration_date, :class => 'form-control' %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :username, :class => 'control-label col-lg-2' %>
    <div class="col-lg-10">
      <%= f.text_field :username, :class => 'form-control' %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :userphone, :class => 'control-label col-lg-2' %>
    <div class="col-lg-10">
      <%= f.text_field :userphone, :class => 'form-control' %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :user_name, :class => 'control-label col-lg-2' %>
    <div class="col-lg-10">
      <%= f.text_field :user_name, :class => 'form-control' %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :user_phone, :class => 'control-label col-lg-2' %>
    <div class="col-lg-10">
      <%= f.text_field :user_phone, :class => 'form-control' %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :username_id, :class => 'control-label col-lg-2' %>
    <div class="col-lg-10">
      <%= f.text_field :username_id, :class => 'form-control' %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :phone, :class => 'control-label col-lg-2' %>
    <div class="col-lg-10">
      <%= f.text_field :phone, :class => 'form-control' %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :telefon, :class => 'control-label col-lg-2' %>
    <div class="col-lg-10">
      <%= f.text_field :telefon, :class => 'form-control' %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :telefonba, :class => 'control-label col-lg-2' %>
    <div class="col-lg-10">
      <%= f.text_field :telefonba, :class => 'form-control' %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :datum, :class => 'control-label col-lg-2' %>
    <div class="col-lg-10">
      <%= f.text_field :datum, :class => 'form-control' %>
    </div>
  </div>

  <div class="form-group">
    <div class="col-lg-offset-2 col-lg-10">
      <%= f.submit nil, :class => 'btn btn-primary' %>
      <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                cars_path, :class => 'btn btn-default' %>
    </div>
  </div>

<% end %>
