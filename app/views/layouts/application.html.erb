<!DOCTYPE html>
<html>
  <head>
    <title>Registration</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= stylesheet_pack_tag 'application' %>
	
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application'%>
	
	
	
	
  </head>
  

  <body>
	  
	  
	  <nav class="navbar navbar-custom navbar-expand-lg navbar-light ">
	    <a class="navbar-brand" href="#">REGISTRACIJE</a>
	    <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
	      <span class="navbar-toggler-icon"></span>
	    </button>
	    <div class="collapse navbar-collapse" id="navbarNav">
	      <ul class="navbar-nav">
			  
              <li class="nav-item"><%= link_to "CARS", cars_path, :class=>"nav-link" %></li>  
              <li class="nav-item"><%= link_to "PARTNERS", partners_path, :class=>"nav-link" %></li>  
              <li class="nav-item"><%= link_to "REGISTRACIJE", registracijes_path, :class=>"nav-link" %></li>
			 
			  <% if !current_user %> 
			  <li class="nav-item">  <a href="/users/sign_in" class="nav-link"> Sign In</a> </li>
				 <li class="nav-item">  <a href="/users/sign_up" class="nav-link"> Register </a> </li>
				  
				  <%else%>
				  <li class="nav-item">
				  	  <%=link_to "Logout", destroy_user_session_path, method: :delete, :class=>"nav-link"  %>
				  </li>
				  
				  <% end %>
			 
			  
			  
	      
	      </ul>
	    </div>
	  </nav>
	  
	  
	  
 
	  <div class="container">
              
	  <div class="header">
		
		  
		  
	  </div>

	 
	  <p class = "notice" ><%= notice %> </p>
	  <p class = "alert" ><%= alert %></p>
	  
      <%= yield %>
    </div>
  </body>
</html>
